<?xml version="1.0" encoding="UTF-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <at.grabner.circleprogress.CircleProgressView
        android:id="@+id/circleView"
        android:layout_width="277.0dip"
        android:layout_height="175dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="116dp"
        CircleProgressView:cpv_autoTextSize="true"
        CircleProgressView:cpv_barColor="@color/primary"
        CircleProgressView:cpv_barWidth="35.0dip"
        CircleProgressView:cpv_maxValue="100.0"
        CircleProgressView:cpv_rimColor="@color/primary_light"
        CircleProgressView:cpv_rimWidth="35.0dip"
        CircleProgressView:cpv_seekMode="true"
        CircleProgressView:cpv_spinColor="@color/primary"
        CircleProgressView:cpv_textColor="@color/primary_dark"
        CircleProgressView:cpv_unit="%"
        CircleProgressView:cpv_unitColor="@color/primary_light"
        CircleProgressView:cpv_value="0.0"
        CircleProgressView:layout_constraintHorizontal_bias="0.502"
        CircleProgressView:layout_constraintLeft_toLeftOf="parent"
        CircleProgressView:layout_constraintRight_toRightOf="parent"
        CircleProgressView:layout_constraintTop_toTopOf="parent" />

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/btn_45"
        android:text="45℃"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        CircleProgressView:layout_constraintLeft_toRightOf="@+id/btn_40"
        android:layout_marginLeft="4dp"
        CircleProgressView:layout_constraintTop_toTopOf="@+id/btn_40"
        android:layout_marginTop="0dp"
        CircleProgressView:layout_constraintBottom_toBottomOf="@+id/btn_40"
        android:layout_marginBottom="0dp"
        CircleProgressView:layout_constraintVertical_bias="0.0" />

    <com.gc.materialdesign.views.ButtonRectangle
        android:text="50℃"
        android:id="@+id/btn_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        CircleProgressView:layout_constraintLeft_toRightOf="@+id/btn_45"
        android:layout_marginLeft="4dp"
        CircleProgressView:layout_constraintTop_toTopOf="@+id/btn_45"
        android:layout_marginTop="0dp"
        CircleProgressView:layout_constraintBottom_toBottomOf="@+id/btn_45"
        android:layout_marginBottom="0dp" />

    <com.gc.materialdesign.views.ButtonRectangle
        android:text="55℃"
        android:id="@+id/btn_55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        CircleProgressView:layout_constraintLeft_toRightOf="@+id/btn_50"
        android:layout_marginLeft="4dp"
        CircleProgressView:layout_constraintTop_toTopOf="@+id/btn_50"
        android:layout_marginTop="8dp"
        CircleProgressView:layout_constraintBottom_toBottomOf="@+id/btn_50"
        android:layout_marginBottom="0dp"
        CircleProgressView:layout_constraintVertical_bias="1.0" />

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/btn_40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="96dp"
        android:layout_marginLeft="12dp"
        android:text="40℃"
        CircleProgressView:layout_constraintBottom_toBottomOf="parent"
        CircleProgressView:layout_constraintLeft_toLeftOf="parent" />

    <com.gc.materialdesign.views.ButtonRectangle

        android:id="@+id/onOffBtn"
        android:text="ON/OFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        CircleProgressView:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        CircleProgressView:layout_constraintRight_toRightOf="parent"
        CircleProgressView:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/currentTemp"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        CircleProgressView:layout_constraintBottom_toTopOf="@+id/circleView"
        CircleProgressView:layout_constraintEnd_toEndOf="parent"
        CircleProgressView:layout_constraintStart_toStartOf="parent"
        CircleProgressView:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>